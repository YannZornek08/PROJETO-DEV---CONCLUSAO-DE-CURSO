generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  role_id    String
  role       Role      @relation(fields: [role_id], references: [id])

  @@map("users")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  products   Product[]
  category_adicionais Category_adicionais[]

  @@map("categories")
}

model Product {
  id                 String               @id @default(uuid())
  name               String
  price              String
  description        String
  banner             String
  created_at         DateTime?            @default(now())
  update_at          DateTime?            @default(now())
  category_id        String
  ingredient_product Ingredient_product[]
  category           Category             @relation(fields: [category_id], references: [id])

  @@map("products")
}

model Order {
  id          String    @id @default(uuid())
  status      Boolean   @default(false)
  draft       Boolean   @default(true)
  created_at  DateTime? @default(now())
  update_at   DateTime? @default(now())
  costumer_id String
  table_id    String
  items       Item[]
  costumer    Costumer  @relation(fields: [costumer_id], references: [id])
  table       Table     @relation(fields: [table_id], references: [id])
  payments    Payment[]

  @@map("orders")
}

model Table {
  id         String    @id @default(uuid())
  number     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  orders     Order[]
  payments   Payment[]

  @@map("tables")
}

model Item {
  id         String    @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  order      Order   @relation(fields: [order_id], references: [id])
  itens_adicionais Itens_adicionais @relation(fields: [itens_adicionais_id], references: [id])
  itens_ingredientes Itens_ingredientes @relation(fields: [itens_ingredientes_id], references: [id])
  order_id   String // pega pelo login
  itens_adicionais_id String // ele cria sozinho, se n√£o quiser vem tudo como false
  itens_ingredientes_id String // ele cria sozinho, vem tudo como true

  @@map("items")
}

model Role {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  users      User[]

  @@map("roles")
}

model Costumer {
  id         String   @id @default(uuid())
  dt_nasc    String
  email      String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  name       String
  password   String
  cpf        BigInt?  @unique
  orders     Order[]

  @@map("costumers")
}

model Payment {
  id            String     @id @default(uuid())
  order_id      String
  created_at    DateTime   @default(now())
  updated_at    DateTime   @default(now())
  mtdo_pagto_id String
  table_id      String
  mtdo_pagto    Mtdo_pagto @relation(fields: [mtdo_pagto_id], references: [id])
  order         Order      @relation(fields: [order_id], references: [id])
  table         Table      @relation(fields: [table_id], references: [id])

  @@map("payments")
}

model Ingredient {
  id                 String               @id @default(uuid())
  name               String
  created_at         DateTime             @default(now())
  updated_at         DateTime             @default(now())
  ingredient_product Ingredient_product[]

  @@map("ingredients")
}

model Ingredient_product {
  id         String @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  ingredient Ingredient @relation(fields: [ingredient_id], references: [id])
  product    Product    @relation(fields: [product_id], references: [id])
  ingredient_id String
  product_id String

  itens_ingredientes Itens_ingredientes[]


  @@map("ingredients_products")
}

model Mtdo_pagto {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  payments   Payment[]

  @@map("payment_methods")
}

model Adicionais {
  id         String @id @default(uuid())
  name       String
  price      String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  category_adicionais Category_adicionais[]

  @@map("adicionais")
}

model Category_adicionais {
  id         String @id @default(uuid())
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  adicionais Adicionais @relation(fields: [adicionais_id], references: [id])
  adicionais_id String
  category    Category @relation(fields: [category_id], references: [id])
  category_id String

  itens_adicionais Itens_adicionais[]

  @@map("categories_adicionais")
}

model Itens_adicionais {
  id         String @id @default(uuid())
  adicionado Boolean @default(false)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  category_adicionais Category_adicionais @relation(fields: [category_adicionais_id], references: [id])
  category_adicionais_id String

  item Item[]

  @@map("itens_adicionais")
}

model Itens_ingredientes {
  id         String @id @default(uuid())
  adicionado Boolean @default(true)
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  ingredient_product Ingredient_product @relation(fields: [ingredient_product_id], references: [id])
  ingredient_product_id String

  item Item[]

  @@map("itens_ingredientes")
}