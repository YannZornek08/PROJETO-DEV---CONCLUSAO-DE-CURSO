generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String    @id @default(uuid())
  name       String
  email      String
  password   String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  role_id    String
  role       Role      @relation(fields: [role_id], references: [id])

  @@map("users")
}

model Category {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  products   Product[]

  @@map("categories")
}

model Product {
  id          String    @id @default(uuid())
  name        String
  price       String
  description String
  banner      String
  created_at  DateTime? @default(now())
  update_at   DateTime? @default(now())

  category    Category @relation(fields: [category_id], references: [id])
  category_id String
  ingredient_product Ingredient_product[] // relação muitos para muitos
  items       Item[]

  @@map("products")
}

model Order {
  id          String    @id @default(uuid())
  status      Boolean   @default(false)
  draft       Boolean   @default(true)
  created_at  DateTime? @default(now())
  update_at   DateTime? @default(now())
  costumer_id String
  table_id    String
  items       Item[]
  costumer    Costumer  @relation(fields: [costumer_id], references: [id])
  table       Table     @relation(fields: [table_id], references: [id])
  payments    Payment[]

  @@map("orders")
}

model Table {
  id         String    @id @default(uuid())
  number     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  orders     Order[]
  payments   Payment[]

  @@map("tables")
}

model Item {
  id         String    @id @default(uuid())
  amount     Int
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())

  order      Order   @relation(fields: [order_id], references: [id])
  // ingredient_product    Ingredient_product @relation(fields: [ingredient_product_id], references: [id])
  product    Product @relation(fields: [product_id], references: [id])

  order_id   String
  // ingredient_product_id String
  product_id String
  

  @@map("items")
}

model Role {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime? @default(now())
  update_at  DateTime? @default(now())
  users      User[]

  @@map("roles")
}

model Costumer {
  id         String   @id @default(uuid())
  dt_nasc    String
  email      String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())
  name       String
  password   String
  cpf        BigInt?  @unique
  orders     Order[]

  @@map("costumers")
}

model Payment {
  id            String     @id @default(uuid())
  order_id      String
  created_at    DateTime   @default(now())
  updated_at    DateTime   @default(now())
  mtdo_pagto_id String
  table_id      String
  mtdo_pagto    Mtdo_pagto @relation(fields: [mtdo_pagto_id], references: [id])
  order         Order      @relation(fields: [order_id], references: [id])
  table         Table      @relation(fields: [table_id], references: [id])

  @@map("payments")
}

model Ingredient {
  id                 String               @id @default(uuid())
  name               String
  created_at         DateTime             @default(now())
  updated_at         DateTime             @default(now())
  ingredient_product Ingredient_product[]

  @@map("ingredients")
}

model Ingredient_product {
  id            String     @id @default(uuid())
  adicionado    Boolean    @default(true)
  created_at    DateTime   @default(now())
  updated_at    DateTime   @default(now())
  ingredient_id String
  product_id String

  // item        Item[]


  @@map("ingredients_products")
}

model Mtdo_pagto {
  id         String    @id @default(uuid())
  name       String
  created_at DateTime  @default(now())
  updated_at DateTime  @default(now())
  payments   Payment[]

  @@map("payment_methods")
}
